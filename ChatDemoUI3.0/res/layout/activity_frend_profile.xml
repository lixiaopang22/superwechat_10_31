<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/layout_title" layout="@layout/view_layout_title"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_profile_view"
                android:layout_marginTop="0dp"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                >
                <ImageView
                    android:id="@+id/iv_profile_avatar"
                    android:src="@drawable/default_hd_avatar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dip"
                    android:layout_height="60dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_profile_nickname"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/iv_profile_avatar"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_profile_username"
                    android:layout_below="@+id/tv_profile_nickname"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_profile_avatar"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
           </LinearLayout>

    <TextView
        android:id="@+id/tv_profile_setting"
        style="@style/list_txt_Style_without_right"
        android:layout_marginTop="20dp"
        android:text="设置备注和标签" />
    <TextView
        android:id="@+id/tv_profile_more"
        style="@style/list_txt_Style_without_right"
        android:layout_marginTop="20dp"
        android:text="更多" />
    <Button
        android:id="@+id/send_message"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4AA747"
        android:textSize="16sp"
        android:text="发消息"
        android:visibility="gone"/>
    <Button
        android:id="@+id/add_friend"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4AA747"
        android:textSize="16sp"
        android:text="添加到通讯录"
        android:visibility="gone"/>
    <Button
        android:id="@+id/send_video"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="发送视频"
        android:visibility="gone"/>
</LinearLayout>