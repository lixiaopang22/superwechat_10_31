<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_activity_register"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_login"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="用户名 "
            android:textColor="#000000"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/et_register_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:hint="你的用户名"
            android:inputType="phone"
            android:textSize="20sp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_register_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_login"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register_nick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="昵   称"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_register_nick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:hint="你的昵称"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_login"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="密    码"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:hint="填写密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_login"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="确认密码"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:background="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/green"
        android:text="注   册"
        android:textColor="@color/black3"
        android:textSize="20sp"/>

</LinearLayout>